[train] #train parameters
epoch = 256
batch_size = 128

shuffle = True

reader_num = 16

optimizer = adam
learning_rate = 1e-3
step_size = 1
lr_multiplier = 0.95

[eval] #eval parameters
batch_size = 128

shuffle = False

reader_num = 16

[data] #data parameters
train_dataset_type = JsonFromFiles
train_formatter_type = SentSCM
train_data_path = /data/disk3/private/zhx/theme/data/scm/cutted
train_file_list = train.json

valid_dataset_type = JsonFromFiles
valid_formatter_type = SentSCM
valid_data_path = /data/disk3/private/zhx/theme/data/scm/cutted
valid_file_list = valid.json

test_dataset_type = JsonFromFiles
test_formatter_type = SentSCM
test_data_path = /data/disk3/private/zhx/theme/data/scm/cutted
test_file_list = test.json

max_sent = 30
sent_len = 30
word2id = /data/disk3/private/zhx/theme/data/scm/word2id.txt

[model] #model parameters
model_name = SCMSMASH

hidden_size = 256

bi_direction = True
num_layers = 2

[output] #output parameters
model_path = /data/disk3/private/zhx/theme/model/SCM/
model_name = SCMSMASH

tensorboard_path = /data/disk3/private/zhx/theme/tensorboard

